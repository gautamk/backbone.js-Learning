 <div class="control-group <%= container_className %>">
  <label class="control-label" >
    <%= label %>
    <div class="controls">
      <<%= tagName %> 
          type="<%= type %>" 
          class="<%= className %>" 
          id="<%= id %>"
          placeholder="<%= placeholder %>"
          name="<%= name %>"
          value="<%= value %>"
      />
        <p class="help-block"><%= error %></p>
    </div>
  </label>
</div>